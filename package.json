{
  "name": "blackcube",
  "version": "1.0.1",
  "description": "Security linting for AI-generated code - catch exposed secrets and vulnerabilities",
  "type": "module",
  "bin": {
    "blackcube": "./bin/cli.js",
    "blackcube-security": "./bin/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "scan": "node ./dist/cli.js scan",
    "prepare": "npm run build"
  },
  "keywords": [
    "security",
    "secrets",
    "linting",
    "cli",
    "vulnerabilities"
  ],
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fast-glob": "^3.3.0",
    "ora": "^7.0.0",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "typescript": "^5.4.0"
  }
}

